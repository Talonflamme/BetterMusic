{
  "name": "better-music",
  "version": "1.0.0",
  "description": "An application for downloading, modifying and adding songs as .mp3 files to spotify.",
  "main": "main.js",
  "scripts": {
    "build": "tsc -p build.tsconfig.json && sass src/main.scss:dist/style.css",
    "start": "npx electron ."
  },
  "author": "Pascal Oberd√∂rfer",
  "license": "ISC",
  "dependencies": {
    "ffmpeg-static": "^5.1.0",
    "music-metadata-browser": "^2.5.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-spinner-material": "^1.4.0"
  },
  "devDependencies": {
    "electron": "^23.0.0",
    "@types/electron": "^1.6.10",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "electron-reload": "^2.0.0-alpha.1",
    "sass": "^1.58.0"
  },
  "build": {
    "productName": "Better Music",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "public/**/*",
      "assets/**/*",
      "package.json",
      "main.js",
      "favicon.ico"
    ],
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "bigicon.png"
    }
  }
}